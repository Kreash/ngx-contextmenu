{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "moduleResolution": "node",
    "target": "ES2022",
    "outDir": "/dist/out-tsc",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "ngx-contextmenu": [
        "./dist/ngx-contextmenu"
      ],
      "ngx-contextmenu-new": [
        "dist/ngx-contextmenu-new"
      ],
      "ngx-contextmenu/*": [
        "./dist/ngx-contextmenu/*"
      ]
    },
    "useDefineForClassFields": false
  },
  // "files": [
  //   "lib/ngx-contextmenu"
  // ],
  "compileOnSave": false,
  "buildOnSave": false,
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
  }
}
